// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String   // Simple hash
  role      String   @default("user") // "admin", "user"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Land {
  id            Int       @id @default(autoincrement())
  name          String
  location      String?
  type          String    @default("OWNED") // OWNED, RENTED
  rentStartDate DateTime?
  rentEndDate   DateTime?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  seasons       Season[]
}

model Crop {
  id        Int       @id @default(autoincrement())
  name      String
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  seasons   Season[]
}

model Season {
  id        Int       @id @default(autoincrement())
  landId    Int
  cropId    Int
  startDate DateTime
  endDate   DateTime?
  isActive  Boolean   @default(true)
  land      Land      @relation(fields: [landId], references: [id])
  crop      Crop      @relation(fields: [cropId], references: [id])
  expenses  Expense[]
  incomes   Income[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expense {
  id          Int      @id @default(autoincrement())
  seasonId    Int
  date        DateTime
  amount      Float
  category    String   // "Riego", "Fertilizante", "Mano de Obra", etc.
  unit        String   // "kg", "litros", "horas"
  note        String?
  imageUrl    String?  // Base64 storage
  isVoided    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  season      Season   @relation(fields: [seasonId], references: [id])
}

model Income {
  id          Int      @id @default(autoincrement())
  seasonId    Int
  date        DateTime
  quantity    Float
  unit        String   // "kg", "toneladas"
  unitPrice   Float
  totalPrice  Float
  category    String?  // [NEW] e.g. "Venta Cosecha", "Subsidio", "Seguro"
  isEstimated Boolean  @default(false)
  isVoided    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  season      Season   @relation(fields: [seasonId], references: [id])
}
