// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String?  @unique
  name      String?  // [NEW] Display name
  password  String?  // Optional, legacy or if not using Supabase Auth for some reason
  role      String   @default("VIEWER") // "OWNER", "EDITOR", "VIEWER"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Land {
  id            Int       @id @default(autoincrement())
  name          String
  location      String?
  type          String    @default("OWNED") // OWNED, RENTED
  rentStartDate DateTime?
  rentEndDate   DateTime?
  isActive      Boolean   @default(true)
  area          Float     @default(0) // [NEW] Area size
  areaUnit      String    @default("ha") // [NEW] Unit (ha, m2)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  seasons       Season[]
}

model Crop {
  id        Int       @id @default(autoincrement())
  name      String
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  seasons   Season[]
}

model Season {
  id        Int       @id @default(autoincrement())
  landId    Int
  cropId    Int
  startDate DateTime
  endDate   DateTime?
  isActive  Boolean   @default(true)
  land      Land      @relation(fields: [landId], references: [id])
  crop      Crop      @relation(fields: [cropId], references: [id])
  expenses  Expense[]
  incomes   Income[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expense {
  id          Int      @id @default(autoincrement())
  seasonId    Int
  date        DateTime
  amount      Float
  quantity    Float?   @default(1) // [NEW] Added for tracking quantity (e.g., 2 scy)
  category    String   // "Riego", "Fertilizante", "Mano de Obra", etc.
  unit        String   // "kg", "litros", "horas"
  note        String?
  imageUrl    String?  // Base64 storage
  isVoided    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  season      Season   @relation(fields: [seasonId], references: [id])
}

model Income {
  id          Int      @id @default(autoincrement())
  seasonId    Int
  date        DateTime
  quantity    Float
  unit        String   // "kg", "toneladas"
  unitPrice   Float
  totalPrice  Float
  category    String?  // [NEW] e.g. "Venta Cosecha", "Subsidio", "Seguro"
  isEstimated Boolean  @default(false)
  isVoided    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  season      Season   @relation(fields: [seasonId], references: [id])
}

enum UnitUsage {
  EXPENSE
  INCOME
  BOTH
}

model Unit {
  id        Int       @id @default(autoincrement())
  name      String    // e.g. "Kilogramos"
  symbol    String    @unique // e.g. "kg"
  usage     UnitUsage @default(BOTH) // [NEW]
  createdAt DateTime  @default(now())
}

// [NEW] Model to store AI Crop Predictions
model SavedPrediction {
  id                  Int      @id @default(autoincrement())
  inputLocation       String
  inputDate           DateTime
  inputArea           Float
  inputAreaUnit       String   @default("ha")
  
  cropName            String
  confidence          Int      // 0-100
  estimatedProduction String   // Text description e.g. "40-50 tons"
  marketDemand        String?  // Text
  
  justification       String   // Long text
  risks               String   // Long text
  
  // [NEW] Financial data
  currentPrice        String?
  priceAtHarvest      String?  // [NEW]
  profitability       String?
  priceTrend          String?

  investmentLevel     String?  // "Alta", "Media", "Baja"
  timeToHarvest       String?  // "4 months"
  maintenance         String?  // "Dif√≠cil"
  
  createdAt           DateTime @default(now())
}
